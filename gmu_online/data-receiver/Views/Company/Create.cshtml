@model Customer


<form method="post" class="text-white">
    <h2>company</h2>
    <hr />
    <div class="form-floating">
        <input asp-for="company" class="form-control" autocomplete="name" aria-required="true" />
        <label asp-for="company" class="form-label"></label>
        <span asp-validation-for="company" class="text-danger"></span>
    </div>
        <div class="form-floating">
        <input asp-for="adress" class="form-control" autocomplete="adress" aria-required="true" />
        <label asp-for="adress" class="form-label"></label>
        <span asp-validation-for="adress" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="city" class="form-control" autocomplete="city" aria-required="true" />
        <label asp-for="city" class="form-label"></label>
        <span asp-validation-for="city" class="text-danger"></span>
    </div>

        <div class="form-floating">
        <input asp-for="phonenumber" class="form-control" autocomplete="phonenumber" aria-required="true" />
        <label asp-for="phonenumber" class="form-label"></label>
        <span asp-validation-for="phonenumber" class="text-danger"></span>
    </div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">create</button>
    </div>
</form>
