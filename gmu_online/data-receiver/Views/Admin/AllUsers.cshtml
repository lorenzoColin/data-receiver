@model IEnumerable<ApplicationUser>


<div class="content">

    <div class = "d-flex ">
        <h1 class="linear-text">all employees</h1>
    </div>

    <a asp-controller ="admin" asp-action="Create"  class="no_decoration " >create new user</a>


      <div class="row">

          @foreach(var Users in @Model)
    {
  
      <div class="col-sm-2 custum-width ">
        <div class="card">
            <i class="fa-solid fa-user-group text-center mt-3 h2 "></i>
          <div class="card-body text-center">
        
            <h6 class="card-title">@Users.FirstName</h6>
            <a asp-action="Edit" asp-route-id=@Users.Id class="text-muted">edit user </a>
      
        
          </div>
        </div>
      </div>
       
    }
    </div>
</div>
  

