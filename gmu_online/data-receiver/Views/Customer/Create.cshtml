@model customer


<style>
    .form-floating input{
            border-radius: 15px!important;
    background: #1F2843!important;
    color:white;
    border: 1px solid #1A2037!important;
    }
     input:focus{
        color:white!important;
    }
</style>

<form method="post" class="text-white">
    <h2>Use a local account to log in.</h2>
    <hr />
    <div class="form-floating">
        <input asp-for="firstname" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="firstname" class="form-label"></label>
        <span asp-validation-for="firstname" class="text-danger"></span>
    </div>
        <div class="form-floating">
        <input asp-for="lastname" class="form-control" autocomplete="lastname" aria-required="true" />
        <label asp-for="lastname" class="form-label"></label>
        <span asp-validation-for="lastname" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="phonenumber" class="form-control" autocomplete="phonenumber" aria-required="true" />
        <label asp-for="phonenumber" class="form-label"></label>
        <span asp-validation-for="phonenumber" class="text-danger"></span>
    </div>
        <div class="form-floating">
        <input asp-for="email" class="form-control" autocomplete="email" aria-required="true" />
        <label asp-for="email" class="form-label"></label>
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
        <div class="form-floating">
        <input asp-for="birthdate" class="form-control" autocomplete="birthdate" aria-required="true" type="date" />
        <label asp-for="birthdate" class="form-label"></label>
        <span asp-validation-for="birthdate" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="company" class="form-control" autocomplete="company" aria-required="true" />
        <label asp-for="company" class="form-label"></label>
        <span asp-validation-for="company" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="adress" class="form-control" autocomplete="adress" aria-required="true" />
        <label asp-for="adress" class="form-label"></label>
        <span asp-validation-for="adress" class="text-danger"></span>
    </div>
        <div class="form-floating">
        <input asp-for="city" class="form-control" autocomplete="city" aria-required="true" />
        <label asp-for="city" class="form-label"></label>
        <span asp-validation-for="city" class="text-danger"></span>
    </div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">create</button>
    </div>
</form>
            
       