@{
    ViewData["Title"] = "Home Page";//Layout = "~/views/Shared/Login_layout.cshtml";
}
@using Microsoft.AspNetCore.Identity
@using data_receiver.Models.ViewModels
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model  List<CustomerViewModel> 


<div class="content">
        <div class="row">
          <div class="col-12">
            <div class="card card-chart">
              <div class="card-header ">
                <div class="row">
                  <div class="col-sm-6 text-left">
                    <h5 class="card-category">Total Shipments</h5>
                    <h2 class="card-title">Performance</h2>
                  </div>
                  <div class="col-sm-6">
                    <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                      <label class="btn btn-sm btn-primary btn-simple active" id="0">
                        <input type="radio" name="options" checked>
                        <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Accounts</span>
                        <span class="d-block d-sm-none">
                          <i class="tim-icons icon-single-02"></i>
                        </span>
                      </label>
                      <label class="btn btn-sm btn-primary btn-simple" id="1">
                        <input type="radio" class="d-none d-sm-none" name="options">
                        <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Purchases</span>
                        <span class="d-block d-sm-none">
                          <i class="tim-icons icon-gift-2"></i>
                        </span>
                      </label>
                      <label class="btn btn-sm btn-primary btn-simple" id="2">
                        <input type="radio" class="d-none" name="options">
                        <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Sessions</span>
                        <span class="d-block d-sm-none">
                          <i class="tim-icons icon-tap-02"></i>
                        </span>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="chart-area">
                  <canvas id="chartBig1"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
    
        <div class="row">
          <div class="col-lg-6 col-md-12">
            <div class="card ">
              <div class="card-header d-flex ">
                <h4 class="card-title w-100"> my customers</h4>
                
                <div class="dropdown  ">
                  <a class=" dropdown-toggle btn btn-link btn-icon w-100" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-cog drop-down-togle"></i>
                  </a>

                  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-controller="UserCustomer" asp-action="index">see your customers</a>
                  </div>
                </div>
              
                @*<div class="card-title justify-content-end w-100 text-right"><a class="btn btn-primary p-1"  asp-controller="UserCustomer" asp-action="index" >edit</a> </div>*@
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table tablesorter " id="">
                    <thead class=" text-primary">
                      <tr>
                        <th>
                          type
                        </th>
                        <th>
                          customers
                        </th>
                        <th class="text-center">
                          total budget
                        </th>
                         <th class="text-center">
                             edit/delete
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                        @foreach (var list in @ViewBag.claimedusers)
                        {
                            <tr>
                                <td>
                                    @list.customer.CustomerType
                                </td>
                                <td>
                                    @list.customer.Klant
                                </td>
                                <td class="text-center">
                                    @list.customer.Max_budget
                                </td>
                                 <td class="text-center">
                                    <a class="p-1" href="Usercustomer/edit/@list.customer.Debiteurnr/customerType/@list.customer.CustomerType"   >edit!</a>
                                    <a class="p-1" asp-controller= "home" asp-action="removecustomer" asp-route-id = "@list.customer.Debiteurnr" asp-route-customerType = "@list.customer.CustomerType">remove!</a>
                                 </td>
                            </tr>
                        }
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-md-12">
            <div class="card ">
              <div class="card-header d-flex">
                <h4 class="card-title w-100"> all  customers</h4>
                <div class="w-100 text-right">
                    <a class="text-right btn btn-link p-0 mt-0 " asp-controller="Customer" asp-action="index" >go to all customer</a> 
                </div>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table tablesorter " id="">
                    <thead class=" text-primary">
                      <tr>
                        <th>
                          customers
                        </th>
                    
                      
                        <th class="text-center">
                          total budget
                        </th>
                         <th class="text-center">
                          claim
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                    @foreach(var list in @Model)
                    {
                       <tr>
                        <td>
                          @list.customer.Klant
                        </td>
                        <td>
                          @list.customer.Max_budget
                        </td>
                        <td class="text-center">
                          <a class="" asp-controller= "home" asp-action="claimCustomer" asp-route-id = "@list.customer.Debiteurnr" asp-route-customerType = "@list.customer.CustomerType">claim</a>
                        </td>
                      </tr>
                                    
                    }
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
</div>
