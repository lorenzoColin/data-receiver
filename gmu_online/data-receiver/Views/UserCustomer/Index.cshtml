@using data_receiver.Models.ViewModels
@model List<CustomerViewModel> 






<div class="content">
    <div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header">
            <h4 class="card-title">sea klanten</h4>
            </div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table tablesorter " id="">
                <thead class=" text-primary">
                    <tr>
                    <th>
                        klant
                    </th>
                    <th>
                        consultant
                    </th>
                    <th>
                        max budget
                    </th>
                     <th>
                        contact
                    </th>
                    <th>
                        laatste videocall
                    </th>
                    <th class="text-center">
                        triggers
                    </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var customers in @Model.Where(s => s.customer.CustomerType == "sea_klanten") )
            {
                 <tr>
                    <td>
                        @customers.customer.Klant
                    </td>
                    <td>
                        @customers.customer.Consultant
                    </td>
                    <td>
                        @customers.customer.Max_budget
                    </td>
                    <td >
                        @customers.customer.Contact
                    </td>
                     <td >
                        @customers.customer.Latest_videocall
                    </td>
                    <td class="text-center">
                        <a  asp-action ="edit" asp-route-DebiteurnrId="@customers.customer.Debiteurnr" asp-route-customerType="@customers.customer.CustomerType" >edit</a>
                        <span>/</span>
                        <a type="button" class="" data-toggle="modal" data-target="#exampleModal">
                          trigger
                        </a>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12 text-black">
                                        <h1>asas</h1>
                                    </div>
                                </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        

                    </td>
                  </tr>
            }

                </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
