                    <label asp-for="CMS" class="control-label"></label>
                    <input disabled asp-for="CMS" class="form-control" />
                    <span asp-validation-for="CMS" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Consultant" class="control-label"></label>
                    <input disabled asp-for="Consultant" class="form-control" />
                    <span asp-validation-for="Consultant" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Contact" class="control-label"></label>
                    <input disabled asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Contract" class="control-label"></label>
                    <input disabled asp-for="Contract" class="form-control" />
                    <span asp-validation-for="Contract" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datum_live" class="control-label"></label>
                    <input disabled asp-for="Datum_live" class="form-control" />
