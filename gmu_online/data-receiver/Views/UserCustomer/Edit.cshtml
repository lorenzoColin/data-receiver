            </div>*@
        </form>
    </div>
    <div class="col-md-6 d-flex justify-content-end">
        <div class="border w-100">
            @foreach(var action in @ViewBag.action)
            {
                <div class="border p-3">

              
                <p>@action.description</p>
                
                <form method="post">
                  
                    <input name="value" type="number" min="1" max="100" placeholder="example 50%" >
                    <input hidden name="actionId" value="@action.id" >
                    <input hidden name="usercustomerId" value="@ViewBag.usercustomer"   >
                    <input type="submit" class="mt-2" >
                </form>


                </div>
            }
          
        </div>
