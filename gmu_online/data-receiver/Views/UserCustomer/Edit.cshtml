                    <input disabled asp-for="Max_budget" class="form-control" />
                    <span asp-validation-for="Max_budget" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Resultaat" class="control-label"></label>
                    <input disabled asp-for="Resultaat" class="form-control" />
