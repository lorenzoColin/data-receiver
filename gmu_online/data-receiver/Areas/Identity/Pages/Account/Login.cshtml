@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";  
    Layout = "_TestLayout";
}
<style>
   .login-class{
        border-radius: 15px!important;
        background: #1A1A1A!important;
        border:none;
        color:white!important;
    }
    input::placeholder{
        color:white!important;    
        border:none;
    }
    input:focus{
        color:white!important;
    }
    .linear-button{
        background: linear-gradient(90deg, #DE334F 0%, #DC582C 100%);
border-radius: 15px;
border:none;
    }
</style>
   <div class="container mx-auto w-50">
    <form style="padding-top: 80px; class="mb-4 login-class" method="post">
          <h3 class="text-white" style=" margin-bottom:20px;">@ViewData["Title"]</h3>
         <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.Email" class="form-control  login-class" placeholder="email" >
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group pt-4">
            <input asp-for="Input.Password" autocomplete="current-password" class="form-control login-class" id="exampleInputPassword1" placeholder="Password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-end">
               <button type="submit" class="btn btn-primary mt-4 linear-button ">lets go</button>
        </div>  
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
